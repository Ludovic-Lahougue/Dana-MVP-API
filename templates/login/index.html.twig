{% extends 'base.html.twig' %}

{% block title %}Connexion - Dana
{% endblock %}

{% block body %}
	<div class="login-container overflow-hidden h-full grid grid-nogutter">
		<div class="col-4 relative pr-3 h-full">
			<img src="{{ asset('build/images/dana/pattern.png') }}" alt="" class="dana-pattern absolute top-0 right-0">
		</div>
		<div class="col-4 form-container h-full flex justify-content-center align-items-center">
			<div class="form">
				<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 2834.65 2834.65" class="ic ic-dana-1">
					<g><path class="cls-2" d="m874.22,1475.16h-411.6V358.2h416.58c361.81,0,602.46,222.39,602.46,559.3s-255.59,557.65-607.44,557.65Zm4.98-892.9h-174.26v675.49h169.29c209.11,0,358.49-131.11,358.49-340.23s-142.73-335.25-353.51-335.25Z"/><path class="cls-2" d="m1473.81,1040.32c0-235.67,192.52-433.17,444.79-433.17s446.45,185.88,446.45,433.17v413.26h-224.05v-96.26c-58.09,73.03-147.71,117.84-260.57,117.84-238.99,0-406.62-195.84-406.62-434.83Zm655.57,1.66c0-116.18-89.62-212.44-210.77-212.44s-209.12,96.26-209.12,212.44,87.96,212.44,209.12,212.44,210.77-96.26,210.77-212.44Z"/><path class="cls-2" d="m742.36,2023.09v451.7h-278.88v-485.08c0-282.8,166.93-514.55,506.69-514.55s510.61,229.78,510.61,514.55v485.08h-278.87v-451.7c0-149.26-72.67-276.91-231.74-276.91s-227.82,127.66-227.82,276.91Z"/></g><path class="cls-1" d="m1480.79,2041.61c0-235.67,192.52-433.17,444.79-433.17s446.45,185.88,446.45,433.17v413.26h-224.05v-96.26c-58.09,73.03-147.71,117.84-260.57,117.84-238.99,0-406.62-195.84-406.62-434.83Zm655.57,1.66c0-116.18-89.62-212.44-210.77-212.44s-209.12,96.26-209.12,212.44,87.96,212.44,209.12,212.44,210.77-96.26,210.77-212.44Z"/></svg>
				{% if error %}
					<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<form action="{{ path('app_login') }}" method="post">
					<div
						class="d-flex flex-column">
						{# <label for="email" class="form-label">Email</label> #}
						<input type="text" id="email" name="_username" value="{{ last_username }}" class="form-input" placeholder="Email">
					</div>

					<div
						class="d-flex flex-column">
						{# <label for="password" class="form-label">Password</label> #}
						<input type="password" id="password" name="_password" class="form-input" placeholder="Mot de passe">
					</div>

					<button type="submit" class="btn-1 mt-5">Se connecter</button>
				</form>

			</div>
		</div>
		<div class="col flex justify-content-end align-items-end pr-3 pb-3">
			<img src="{{ asset('build/images/dana/slogan_light.png')}}" alt="" class="dana-slogan w-8 h-auto">
		</div>
	</div>
{% endblock %}
